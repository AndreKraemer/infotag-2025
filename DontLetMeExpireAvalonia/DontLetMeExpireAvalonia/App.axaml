<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:DontLetMeExpireAvalonia"
             x:Class="DontLetMeExpireAvalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://DontLetMeExpireAvalonia/Assets/ColorResources.axaml"/>
				<ResourceInclude Source="avares://DontLetMeExpireAvalonia/Assets/AppResources.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.Styles>
        <FluentTheme />
		<StyleInclude Source="avares://DontLetMeExpireAvalonia/Assets/Icons.axaml"/>
		<StyleInclude Source="avares://DontLetMeExpireAvalonia/Assets/AppStyles.axaml"/>
    </Application.Styles>
</Application>